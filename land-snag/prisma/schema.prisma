generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Property {
  id              String         @id @default(cuid())
  externalId      String?        @unique
  source          String         @default("local")
  latitude        Float
  longitude       Float
  price           Int
  address         String
  city            String
  state           String
  zip             String
  propertyType    String
  lotSize         Float?
  lastFetchedAt   DateTime       @default(now())
  createdAt       DateTime       @default(now())
  county          String?
  notes           PropertyNote[]
  savedProperties SavedProperty?

  @@index([latitude, longitude])
  @@index([externalId])
  @@index([lastFetchedAt])
  @@index([source])
}

model SavedProperty {
  id             String   @id @default(cuid())
  propertyId     String   @unique
  savedAt        DateTime @default(now())
  status         String   @default("SAVED")
  personalRating Int?
  property       Property @relation(fields: [propertyId], references: [id])
}

model PropertyNote {
  id         String   @id @default(cuid())
  propertyId String
  content    String
  createdAt  DateTime @default(now())
  property   Property @relation(fields: [propertyId], references: [id])
}

model CountyNote {
  id        String   @id @default(cuid())
  county    String
  state     String
  content   String
  createdAt DateTime @default(now())

  @@unique([county, state])
}

model RealtorRawCache {
  id        Int      @id @default(autoincrement())
  hash      String   @unique
  payload   String
  createdAt DateTime @default(now())
}
